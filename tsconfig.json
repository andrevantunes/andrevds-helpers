{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"],
  "compileOnSave": true
}
